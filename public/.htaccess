<IfModule mod_rewrite.c>
    Options -MultiViews
    RewriteEngine On
    
    # QUAN TRỌNG: Comment dòng này lại khi chạy Localhost Linux
    RewriteBase /
    
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]
</IfModule>